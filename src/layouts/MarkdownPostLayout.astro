---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title} headTitle={frontmatter.title}>
    <p><em>{frontmatter.description}</em></p>
    <img src={frontmatter.image.url} width="400px" alt={frontmatter.image.alt} />
    <p>{frontmatter.pubDate.toString().slice(0,10)}</p>
    <p>Written by: <b>{frontmatter.author}</b></p>

    <div class="tags">
        {frontmatter.tags.map((tag) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
    
    <slot />
</BaseLayout>
<style>
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex;
      flex-wrap: wrap;
    }
  
    .tag {
      margin: 0.2em;
      font-size: 0.8em;
    }
</style>