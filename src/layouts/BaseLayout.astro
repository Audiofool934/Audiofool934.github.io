---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../style/global.css"

const { pageTitle, headTitle } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <title>{headTitle}</title> <!-- This sets the browser tab title -->
		
		<!-- support for latex -->
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
			integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
			crossorigin="anonymous"
		/>

		<!-- prism syntex highlight
		<link href="../../public/prism.css" rel="stylesheet" /> -->

	</head>
	<body>
        <Header />
        <h1>{pageTitle}</h1> <!-- This sets the page's main heading -->
        <slot />
		<Footer />
		<script>
			import "../scripts/menu.js";
		</script>

		<!-- prism syntex highlight
		<script src="../scripts/prism.js"></script> -->
	</body>
</html>
