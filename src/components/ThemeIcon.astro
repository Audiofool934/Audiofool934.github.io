<button
	id="themeToggle"
	class="p-2 rounded-lg transition-colors text-gray-600 hover:text-gray-900 hover:bg-gray-100 dark:text-text-muted dark:hover:text-text-main dark:hover:bg-surface"
	aria-label="Toggle theme"
>
	<span class="icon sun inline-flex text-lg dark:hidden" aria-hidden="true"
		>☼</span
	>
	<span class="icon moon hidden text-lg dark:inline-flex" aria-hidden="true"
		>○</span
	>
</button>

<script is:inline>
	// Theme toggle functionality - initialization happens in BaseLayout <head>
	if (typeof window !== "undefined") {
		const element = document.documentElement;
		const storageKey = "theme";

		const toggleButton = document.getElementById("themeToggle");
		const toggleTheme = () => {
			const isDark = element.classList.toggle("dark");
			localStorage.setItem(storageKey, isDark ? "dark" : "light");
		};

		toggleButton?.addEventListener("click", toggleTheme);
	}
</script>
