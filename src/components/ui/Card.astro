---
interface Props {
	href?: string;
	class?: string;
}

const { href, class: className } = Astro.props;
const Element = href ? "a" : "div";
---

<Element
	href={href}
	class:list={[
		"group relative block overflow-hidden rounded-xl border border-border-subtle bg-surface p-6 transition-all duration-300 hover:border-primary/50 hover:shadow-lg hover:shadow-primary/5",
		className,
	]}
>
	<div
		class="absolute inset-0 -z-10 bg-gradient-to-br from-primary/5 via-transparent to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"
	>
	</div>
	<slot />
</Element>
