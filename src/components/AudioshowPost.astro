---
const { title, episode, pubDate, url } = Astro.props;
const formattedDate = pubDate
	? new Date(pubDate).toLocaleDateString("en", {
			month: "short",
			day: "numeric",
			year: "numeric",
		})
	: "";
---

<li class="group list-none">
	<a href={url} class="surface-card block p-6">
		<div class="flex flex-col gap-2">
			<span class="pill font-semibold">
				EP {episode}
			</span>
			<h3
				class="text-lg font-heading font-semibold text-primary group-hover:text-primary transition-colors"
			>
				{title}
			</h3>
			{formattedDate && <p class="text-sm text-muted">{formattedDate}</p>}
		</div>
	</a>
</li>
