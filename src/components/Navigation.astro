---
const navItems = [
	{ href: "/", label: "Home" },
	{ href: "/alog/", label: "Notebook" },
	{ href: "/projects/", label: "Projects" },
	{ href: "/photography/", label: "Photography" },
	{ href: "/audioshow/", label: "Listening" },
	{ href: "/about/", label: "About" },
];

const normalize = (path) => (path.endsWith("/") ? path : `${path}/`);
const currentPath = normalize(Astro.url?.pathname ?? "/");
const isActive = (href) => (href === "/" ? currentPath === "/" : currentPath.startsWith(normalize(href)));
---

<ul class="nav-links">
	{navItems.map(({ href, label }) => (
		<li>
			<a href={href} aria-current={isActive(href) ? "page" : undefined}>{label}</a>
		</li>
	))}
</ul>
