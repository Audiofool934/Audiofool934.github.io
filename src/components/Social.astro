---
const { platform, username = "", label = platform, href } = Astro.props;
const baseMap = {
	github: "https://github.com",
	instagram: "https://instagram.com",
	bsky: "https://bsky.app/profile",
	linkedin: "https://www.linkedin.com/in",
};

const base = baseMap[platform] ?? `https://www.${platform}.com`;
const url = href ?? `${base}/${username}`;
---

<a class="social-link" href={url} target="_blank" rel="noopener noreferrer">
	<span>{label}</span>
	<span class="arrow" aria-hidden="true">â†—</span>
</a>

<style>
	.social-link {
		display: inline-flex;
		align-items: center;
		justify-content: space-between;
		gap: 0.35rem;
		font-size: 0.9rem;
		padding: 0.35rem 0.65rem;
		border-radius: 999px;
		border: 1px solid transparent;
		background: var(--bg-muted);
		color: var(--text-secondary);
		text-decoration: none;
		transition: border 150ms ease, color 150ms ease;
	}

	.social-link:hover {
		color: var(--text-primary);
		border-color: var(--border-strong);
	}

	.arrow {
		font-size: 0.75rem;
	}
</style>
