---
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header
	class="sticky top-0 z-50 backdrop-blur-lg border-b"
	style="background: var(--bg-base); background: color-mix(in srgb, var(--bg-base) 80%, transparent); border-color: var(--border-subtle);"
>
	<nav
		class="flex items-center justify-between max-w-[56rem] mx-auto px-6 py-4"
	>
		<a
			href="/"
			class="font-heading text-xl font-bold transition-colors"
			style="color: var(--text-primary);"
		>
			<span class="hover:text-gradient">Audiofool</span>
		</a>
		<div class="flex items-center gap-4">
			<Navigation />
			<ThemeIcon />
		</div>
	</nav>
</header>

<style>
	header a:hover span {
		background: linear-gradient(
			135deg,
			var(--primary) 0%,
			var(--accent) 100%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
</style>
