---
const { title, url, description = "", meta = "", tags = [] } = Astro.props;
const tagList = Array.isArray(tags) ? tags : [];
---

<li class="group list-none">
	<a href={url} class="blog-card">
		<div class="flex flex-col gap-2">
			{
				meta && (
					<span
						class="text-xs font-mono uppercase tracking-wider"
						style="color: var(--accent);"
					>
						{meta}
					</span>
				)
			}
			<h3 class="blog-card-title">
				{title}
			</h3>
			{
				description && (
					<p
						class="text-sm"
						style="color: var(--text-muted); line-height: 1.6;"
					>
						{description}
					</p>
				)
			}
			{
				tagList.length > 0 && (
					<ul class="flex gap-2 flex-wrap mt-1">
						{tagList.slice(0, 3).map((tag) => (
							<li
								class="text-xs font-mono"
								style="color: var(--text-muted);"
							>
								#{tag}
							</li>
						))}
					</ul>
				)
			}
		</div>
		<span class="blog-card-arrow">â†’</span>
	</a>
</li>

<style>
	.blog-card {
		background: var(--bg-surface);
		backdrop-filter: blur(var(--glass-blur));
		-webkit-backdrop-filter: blur(var(--glass-blur));
		border: 1px solid var(--border-subtle);
		border-radius: var(--radius-xl);
		transition: all 0.4s cubic-bezier(0.2, 1, 0.3, 1);
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		gap: 1rem;
		padding: 1.25rem 1.5rem;
	}

	.blog-card:hover {
		border-color: var(--accent);
		background: hsla(var(--h), var(--s), var(--card-hover-bg), 0.8);
		box-shadow: var(--shadow-medium);
		transform: translateY(-4px) scale(1.01);
	}

	.blog-card-title {
		font-family: var(--font-heading, "Outfit", sans-serif);
		font-size: 1.125rem;
		font-weight: 600;
		letter-spacing: -0.01em;
		color: var(--text-primary);
		transition: color 0.2s ease;
	}

	.blog-card:hover .blog-card-title {
		color: var(--primary);
	}

	.blog-card-arrow {
		font-size: 1.25rem;
		color: var(--text-muted);
		opacity: 0;
		transform: translateX(-4px);
		transition: all 0.3s ease;
	}

	.blog-card:hover .blog-card-arrow {
		opacity: 1;
		transform: translateX(0);
		color: var(--accent);
	}
</style>
