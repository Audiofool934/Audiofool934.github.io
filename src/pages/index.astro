---
import MinimalLayout from "../layouts/MinimalLayout.astro";
---

<MinimalLayout title="Audiofool">
	<div class="p-8 md:p-12 min-h-[60vh] flex flex-col justify-center">
		<!-- Introduction -->
		<h1
			class="text-4xl md:text-6xl font-bold tracking-tight mb-8 font-heading"
		>
			Audiofool
		</h1>

		<p
			class="text-xl md:text-2xl leading-relaxed max-w-2xl text-[var(--text-muted)] mb-12"
		>
			Die-hard Pink Floyd fan. Developer. <br />
			Exploring the intersection of <span
				class="text-[var(--text-main)] font-medium">Logic</span
			> and <span class="text-[var(--text-main)] font-medium">Sound</span
			>.
		</p>

		<!-- Navigation Grid / Quick Links (Optional, since Sidebar exists) -->
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-md">
			<a
				href="/projects/"
				class="group flex items-center justify-between p-4 border border-[var(--border-main)] hover:bg-[var(--text-main)] hover:text-[var(--bg-body)] transition-colors"
			>
				<span class="font-mono">/projects</span>
				<span class="opacity-0 group-hover:opacity-100">-></span>
			</a>
			<a
				href="/log/"
				class="group flex items-center justify-between p-4 border border-[var(--border-main)] hover:bg-[var(--text-main)] hover:text-[var(--bg-body)] transition-colors"
			>
				<span class="font-mono">/log</span>
				<span class="opacity-0 group-hover:opacity-100">-></span>
			</a>
			<a
				href="/wiki/"
				class="group flex items-center justify-between p-4 border border-[var(--border-main)] hover:bg-[var(--text-main)] hover:text-[var(--bg-body)] transition-colors"
			>
				<span class="font-mono">/wiki</span>
				<span class="opacity-0 group-hover:opacity-100">-></span>
			</a>
			<a
				href="/audioshow/"
				class="group flex items-center justify-between p-4 border border-[var(--border-main)] hover:bg-[var(--text-main)] hover:text-[var(--bg-body)] transition-colors"
			>
				<span class="font-mono">/audioshow</span>
				<span class="opacity-0 group-hover:opacity-100">-></span>
			</a>
		</div>
	</div>
</MinimalLayout>
