---
import BaseLayout from "../layouts/BaseLayout.astro";

const headTitle = "About";
const pageTitle = "Audiofool";
const lede = "Stats/Data Science undergrad documenting the overlap between research, photography, and music.";

const focusAreas = [
	"Applied probability, statistics, and data-driven research habits.",
	"Multimodal + audio generation ‚Äî especially when music meets ML.",
	"Compact camera workflows and bilingual note-taking systems.",
];

const tools = [
	{ label: "Code", value: "Python, C/C++, PyTorch, Astro" },
	{ label: "Math", value: "Measure theory, stochastic processes, information theory" },
	{ label: "Creative", value: "Fujifilm X100 / Ricoh GR, 35mm film, Logic Pro" },
];

const influences = [
	"Hard rock storytellers: AC/DC, Led Zeppelin, Foo Fighters.",
	"Prog dreamers: Pink Floyd, Steven Wilson, King Crimson.",
	"World builders: Tolkien, Vince Gilligan, George Lucas.",
	"Filmmakers obsessed with time: Christopher Nolan, Denis Villeneuve.",
];

const currentEnjoyment = [
	{ title: "Reading", detail: "Game of Thrones (re-read) + nonlinear algebra notes." },
	{ title: "Watching", detail: "Better Call Saul montages for character studies." },
	{ title: "Listening", detail: "Weekly audioshow setlists + random cassette finds." },
];
---

<BaseLayout pageTitle={pageTitle} headTitle={headTitle} lede={lede}>
	<section class="bio">
		<div>
			<p>
				I answer to <strong>Audiofool</strong> online ‚Äî a nod to my obsession with sound design and minimal gear. I study statistics/data science,
				work on multimodal audio research, and keep this site as a slow, intentional logbook.
			</p>
			<p>
				When I'm not buried in proofs or model outputs, I'm walking with a compact camera, editing a bilingual essay, or recording a tiny radio
				show called <a href="/audioshow/">Audioshow</a>. The mission: stay curious, stay fast, stay simple.
			</p>
		</div>
		<div class="card">
			<p class="eyebrow">Snapshot</p>
			<ul class="list-reset snapshot">
				<li>üéì Stats/Data Science undergrad</li>
				<li>üåè Learning + writing in Chinese & English</li>
				<li>üéõ Researching multimodal audio + generation</li>
				<li>üì∑ Carrying a film camera everywhere</li>
			</ul>
		</div>
	</section>

	<section>
		<p class="eyebrow">Currently exploring</p>
		<h2>Research + craft pillars</h2>
		<ul class="list-reset focus-list">
			{focusAreas.map((item) => (
				<li class="surface-card">{item}</li>
			))}
		</ul>
	</section>

	<section class="two-col">
		<div>
			<p class="eyebrow">Toolkit</p>
			<ul class="list-reset tool-list">
				{tools.map((tool) => (
					<li>
						<strong>{tool.label}</strong>
						<span>{tool.value}</span>
					</li>
				))}
			</ul>
		</div>
		<div>
			<p class="eyebrow">Influences</p>
			<ul class="list-reset influence-list">
				{influences.map((entry) => (
					<li>{entry}</li>
				))}
			</ul>
		</div>
	</section>

	<section>
		<p class="eyebrow">Right now</p>
		<ul class="list-reset now-cards">
			{currentEnjoyment.map((item) => (
				<li class="surface-card">
					<p class="pill">{item.title}</p>
					<p>{item.detail}</p>
				</li>
			))}
		</ul>
	</section>

	<section class="two-col">
		<div>
			<p class="eyebrow">Elsewhere</p>
			<p>
				Find me on <a href="https://github.com/audiofool934">GitHub</a>, <a href="https://bsky.app/profile/audiofool934.com">Bluesky</a>, and
				<a href="https://instagram.com/audiofool934">Instagram</a>. Email is best for deep dives ‚Äî <strong>hi [at] audiofool934.com</strong>.
			</p>
		</div>
		<div>
			<p class="eyebrow">Values</p>
			<ul class="list-reset values">
				<li>üß† Clarity over noise.</li>
				<li>üì∑ Process over perfection.</li>
				<li>üé∏ Share work early, keep it human.</li>
			</ul>
		</div>
	</section>
</BaseLayout>

<style>
	.bio {
		display: grid;
		gap: 1.2rem;
		grid-template-columns: minmax(0, 1.4fr) minmax(0, 1fr);
	}

	.card {
		padding: 1.2rem;
		border-radius: var(--radius-xl);
		border: 1px solid var(--border-subtle);
		background: var(--bg-page);
	}

	.snapshot li {
		padding: 0.3rem 0;
	}

	.focus-list li {
		margin-bottom: 0.8rem;
	}

	.tool-list li {
		padding: 0.6rem 0;
		border-bottom: 1px solid var(--border-subtle);
		display: flex;
		flex-direction: column;
		gap: 0.2rem;
	}

	.tool-list strong {
		color: var(--text-primary);
	}

	.influence-list li {
		padding: 0.35rem 0;
		color: var(--text-secondary);
	}

	.now-cards {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 1rem;
	}

	.values li {
		padding: 0.3rem 0;
	}

	@media (max-width: 720px) {
		.bio {
			grid-template-columns: 1fr;
		}
	}
</style>
