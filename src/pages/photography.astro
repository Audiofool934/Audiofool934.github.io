---
import BaseLayout from "../layouts/BaseLayout.astro";

const headTitle = "Photography";
const pageTitle = "Photography";
const lede =
	"Field recordings made with cameras — organized for quick browsing once new sets land.";

const latestUploads = [
	{
		title: "Guangzhou Rain Gold",
		location: "Guangzhou · hotel rooftop",
		image: "/images/photography/guangzhou.JPG",
		date: "Jan 2025",
		tags: ["city", "night"],
	},
	{
		title: "Skyline Bird",
		location: "Shenzhen · balcony",
		image: "/images/photography/bird.JPG",
		date: "Jan 2025",
		tags: ["street", "telephoto"],
	},
	{
		title: "Moonrise Over Campus",
		location: "Beijing · dorm roof",
		image: "/images/photography/moonrise.JPG",
		date: "Jan 2025",
		tags: ["sky", "blue hour"],
	},
	{
		title: "Winter Sunset Walk",
		location: "Shenzhen · park trail",
		image: "/images/photography/sunset.jpg",
		date: "Jan 2025",
		tags: ["sunset", "walk"],
	},
];

const photoTags = [
	{ label: "landscape", description: "mountains, oceans, rooftops" },
	{ label: "portrait", description: "friends, self, mentors" },
	{ label: "documentary", description: "lectures, rehearsals, labs" },
	{ label: "studio", description: "tabletop sets + album art" },
	{ label: "travel", description: "road stories + transit" },
];

const themes = [
	{
		title: "Hong Kong · 2025",
		season: "In planning",
		description:
			"Neon reflections, ferry decks, and compact-camera street studies.",
	},
	{
		title: "Summer Palace · Oct 2025",
		season: "Scouting",
		description:
			"Layering tourist rhythms with quiet architectural geometry.",
	},
	{
		title: "Campus Nights",
		season: "Ongoing",
		description:
			"Documenting math seminars and music rehearsals under one roll.",
	},
];
---

<BaseLayout pageTitle={pageTitle} headTitle={headTitle} lede={lede}>
	<section class="section mb-16">
		<header class="section-header mb-8">
			<p class="eyebrow">Latest drop</p>
			<h2 class="text-3xl font-bold mb-2">
				Field recordings made with cameras
			</h2>
			<p class="text-muted">
				A rolling archive of city lights, blue hours, and street
				rhythms.
			</p>
		</header>
		<div
			class="photo-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8"
		>
			{
				latestUploads.map((shot) => (
					<article class="surface-card p-0 overflow-hidden flex flex-col group">
						<div class="relative overflow-hidden aspect-[4/3]">
							<img
								src={shot.image}
								alt={shot.title}
								loading="lazy"
								class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
								<p class="text-white text-sm font-medium">
									{shot.location}
								</p>
							</div>
						</div>
						<div class="p-6">
							<div class="flex justify-between items-start mb-2">
								<h3 class="text-xl font-bold tracking-tight">
									{shot.title}
								</h3>
								<span class="pill mb-0">{shot.date}</span>
							</div>
							<p class="text-muted text-sm">
								{shot.tags.join(" · ")}
							</p>
						</div>
					</article>
				))
			}
		</div>
	</section>

	<section class="section mb-16">
		<header class="section-header mb-8">
			<p class="eyebrow">Browse by tag</p>
		</header>
		<div class="tag-search grid grid-cols-2 md:grid-cols-5 gap-4">
			{
				photoTags.map((tag) => (
					<a
						href={`/photography/?tag=${tag.label}`}
						class="surface-card p-4 text-center group"
					>
						<strong class="block group-hover:text-accent transition-colors">
							{tag.label}
						</strong>
						<span class="muted text-xs block mt-1">
							{tag.description}
						</span>
					</a>
				))
			}
		</div>
	</section>

	<section class="section mb-20">
		<header class="section-header mb-8">
			<p class="eyebrow">Themes & journeys</p>
		</header>
		<div class="themes grid grid-cols-1 md:grid-cols-3 gap-6">
			{
				themes.map((theme) => (
					<div class="surface-card group">
						<p class="pill group-hover:text-accent transition-colors">
							{theme.season}
						</p>
						<h3 class="text-xl font-bold mb-2">{theme.title}</h3>
						<p class="text-secondary text-sm leading-relaxed">
							{theme.description}
						</p>
					</div>
				))
			}
		</div>
	</section>
</BaseLayout>

<style>
	/* Custom photography page styles if needed, otherwise utility classes are used */
</style>
