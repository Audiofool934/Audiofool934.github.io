---
import BaseLayout from "../layouts/BaseLayout.astro";

const headTitle = "Photography";
const pageTitle = "Photography";
const lede = "Field recordings made with cameras — organized for quick browsing once new sets land.";

const latestUploads = [
	{
		title: "ICBS Night",
		location: "Beijing · conference hall",
		image: "/images/alog/icbs_2024.jpg",
		date: "Jan 2025",
		tags: ["portrait", "documentary"],
	},
	{
		title: "Entropy Notes",
		location: "Study desk",
		image: "/images/alog/A_Mathematical_Theory_of_Communication.png",
		date: "Dec 2024",
		tags: ["still life", "study"],
	},
	{
		title: "Orthlist Chalk",
		location: "Lecture board",
		image: "/images/alog/Orthlist-vs_Triplet.jpeg",
		date: "Nov 2024",
		tags: ["blackboard", "process"],
	},
];

const photoTags = [
	{ label: "landscape", description: "mountains, oceans, rooftops" },
	{ label: "portrait", description: "friends, self, mentors" },
	{ label: "documentary", description: "lectures, rehearsals, labs" },
	{ label: "studio", description: "tabletop sets + album art" },
	{ label: "travel", description: "road stories + transit" },
];

const themes = [
	{ title: "Hong Kong · 2025", season: "In planning", description: "Neon reflections, ferry decks, and compact-camera street studies." },
	{ title: "Summer Palace · Oct 2025", season: "Scouting", description: "Layering tourist rhythms with quiet architectural geometry." },
	{ title: "Campus Nights", season: "Ongoing", description: "Documenting math seminars and music rehearsals under one roll." },
];
---

<BaseLayout pageTitle={pageTitle} headTitle={headTitle} lede={lede}>
	<section>
		<p class="eyebrow">Latest drop</p>
		<p class="muted">Swipe / scroll horizontally — newest frames appear first once uploads begin.</p>
		<div class="latest-carousel">
			{latestUploads.map((shot) => (
				<article class="surface-card">
					<img src={shot.image} alt={shot.title} loading="lazy" />
					<div>
						<p class="pill">{shot.date}</p>
						<h3>{shot.title}</h3>
						<p>{shot.location}</p>
						<p class="muted">{shot.tags.join(" · ")}</p>
					</div>
				</article>
			))}
		</div>
	</section>

	<section>
		<p class="eyebrow">Browse by tag</p>
		<div class="tag-search">
			{photoTags.map((tag) => (
				<a href={`/photography/?tag=${tag.label}`} class="surface-card">
					<strong>{tag.label}</strong>
					<span class="muted">{tag.description}</span>
				</a>
			))}
		</div>
	</section>

	<section>
		<p class="eyebrow">Themes & journeys</p>
		<div class="themes">
			{themes.map((theme) => (
				<div class="surface-card">
					<p class="pill">{theme.season}</p>
					<h3>{theme.title}</h3>
					<p>{theme.description}</p>
				</div>
			))}
		</div>
	</section>
</BaseLayout>

<style>
	.latest-carousel {
		display: flex;
		gap: 1rem;
		overflow-x: auto;
		scroll-snap-type: x mandatory;
		padding-bottom: 0.5rem;
	}

	.latest-carousel article {
		min-width: 260px;
		flex: 0 0 auto;
		scroll-snap-align: start;
		display: flex;
		flex-direction: column;
		gap: 0.8rem;
	}

	.latest-carousel img {
		width: 100%;
		border-radius: var(--radius-lg);
		border: 1px solid var(--border-subtle);
	}

	.tag-search {
		display: grid;
		gap: 0.8rem;
		grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
	}

	.tag-search a {
		text-decoration: none;
		display: flex;
		flex-direction: column;
		gap: 0.2rem;
	}

	.themes {
		display: grid;
		gap: 1rem;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}
</style>
